{% load staticfiles %}

<link rel="stylesheet" type="text/css" href="{% static 'query/style.css' %}" />

<body>
<div class="header">
	<div id="logo-title">
		<a title="EUDAT" href="/">
			<img id="logo" src="{% static 'query/images/EUDAT-logo.png' %}">
		</a>
	<div class="site-slogan"> European Data Infrastructure</div>
	</div>
	<div id="title" class="anno-title">
		<p>
		<span class="semantic-title"> EUDAT B2NOTE</span>
		</p>
	</div>
</div>

<div class="container">
<form action="{% url 'query:query_vocab' %}" method="post">
	{% csrf_token %}
	<div id="input-text" class="input-text">
	<table class="input-text">
		<tr><th> Input text </th></tr>
		<tr><td><textarea name="text_parse" cols=120 rows=20></textarea></td></tr>
		<tr><td><input type="submit" value="Query Text!"></td></tr>
	</table>
	</div>
</form>
<form enctype="multipart/form-data" action="{% url 'query:query_file' %}" method="post">
	{% csrf_token %}
	<div id="input-file" class="input-file">
	<table class="input-text">
		<tr><th>Please specify a file, or a set of files: </th></tr>
		<tr><td><input type="file" name="datafile" size="40"></input></td></tr>
		<tr><td><input type="submit" value="Query File!"></td></tr>
	</table>
	</div>
</form>
</div>

</body>
